{
    "extends": "solhint:recommended",
    "plugins": [],
    "rules": {
        "func-visibility": ["warn", { "ignoreConstructors": true }],
        "avoid-suicide": "error",
        "avoid-sha3": "error",
        "constructor-syntax": "error",
        "func-param-name-mixedcase": "error",
        "modifier-name-mixedcase": "error",
        "named-parameters-mapping": "error",
        "ordering": "error"
    }
}
